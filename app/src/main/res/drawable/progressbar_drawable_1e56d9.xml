<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#AA999999"
                android:centerColor="#AA999999"
                android:centerY="0.75"
                android:endColor="#AA999999"
                android:angle="270"
                />
        </shape>
    </item>


    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#1e56d9"
                    android:centerColor="#1e56d9"
                    android:centerY="0.75"
                    android:endColor="#1e56d9"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>
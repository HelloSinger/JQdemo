<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fiveDp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/blue_top_corner_box_5"
            />

        <com.jq.code.view.trend.SynthTrendWeightView
            android:id="@+id/weightChar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:pointPaintColor="@color/mainColor"
            app:connLineColor="@color/mainColor"
            app:xSesion="7"
            app:connYinColor = "#D1ECF5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:background="@drawable/gray_bottom_corner_box_5"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/bestHightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="28"
                    android:text="@string/trendHeightest1"
                    />
                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/bestHightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:customtTextSize="50"
                    android:text="- -"
                    android:layout_marginLeft="@dimen/fiveDp"
                    android:textColor="@color/text_black"
                    app:customtTypeface="CONDM"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E8E7E9"
                android:layout_marginTop="@dimen/fiftentDp"
                android:layout_marginBottom="@dimen/fiftentDp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/bestLowText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="28"
                    app:customtTypeface="LTEX"
                    android:text="@string/trendLowest1"
                    />
                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/bestLowValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:customtTextSize="50"
                    android:text="- -"
                    android:layout_marginLeft="@dimen/fiveDp"
                    android:textColor="@color/text_black"
                    app:customtTypeface="CONDM"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.jq.code.view.SelecteScrollView
        android:id="@+id/weightTypeName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/fiveDp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:background="@android:color/transparent"
        app:mGravity="TOP"
        app:mShadowsColor="@color/mainColor"
        app:mShadowsHeight="60"
        app:mtextRatio="4"
        app:mtextSize="15"
        app:mtextcolor="@color/white"></com.jq.code.view.SelecteScrollView>

</FrameLayout>

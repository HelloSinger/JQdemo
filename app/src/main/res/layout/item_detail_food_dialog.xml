<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/item_detail_dialog_ll"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_stroke_box"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_detail_dialog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_black"
                app:customtTextSize="36" />

            <ImageView
                android:id="@+id/item_detail_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="20dp"
                android:src="@mipmap/dialog_cancle_icon" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_intake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:customtTextSize="38"
                    app:customtTypeface="PROR" />

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_intake_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foodIntakeTag4"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="26" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:customtTextSize="38"
                    app:customtTypeface="PROR" />

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_goal_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foodIntakeTag5"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_overplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:customtTextSize="38"
                    app:customtTypeface="PROR" />

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_detail_dialog_overplus_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/foodIntakeTag6"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="26" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-16dp">

            <ListView
                android:id="@+id/item_detail_dialog_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:overScrollMode="never"
                android:paddingBottom="20dp"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:scrollbars="none"></ListView>

            <ImageView
                android:id="@+id/detail_dialog_list_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:paddingBottom="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/arrow_down" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bloodglucose_gray"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_solid_box_2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_diet_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_rectangle_selecter_default_wi"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="28dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/diet_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">

                    <com.jq.code.view.text.CustomTextView
                        android:id="@+id/item_diet_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2125"
                        android:textColor="@color/black"
                        app:customtTextSize="60"
                        app:customtTypeface="PROR" />

                    <com.jq.code.view.text.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listDetailDeit"
                        android:textColor="@color/black1"
                        app:customtTextSize="26" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/exercise_icon"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:orientation="vertical">

                    <com.jq.code.view.text.CustomTextView
                        android:id="@+id/item_exercise_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="609"
                        android:textColor="@color/black"
                        app:customtTextSize="60"
                        app:customtTypeface="PROR" />

                    <com.jq.code.view.text.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/listDetailExerise"
                        android:textColor="@color/black1"
                        app:customtTextSize="26" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_calorie_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/item_detail_open_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#fafaff"
                android:gravity="center"
                android:orientation="horizontal">

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/item_expantion_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/listExpansion"
                    android:textColor="@color/text_gray"
                    app:customtTextSize="23" />

                <ImageView
                    android:id="@+id/item_expantion_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:src="@mipmap/list_open_arrow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
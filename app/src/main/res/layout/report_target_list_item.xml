<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingBottom="@dimen/fiftentDp"
    android:paddingTop="@dimen/fiftentDp"
    android:gravity="center_vertical"
    >
    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/report_bodily_icon"
        />
    <TextView
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/detailBodily"
        android:textSize="15sp"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/tenDp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/bodilyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reportBodilyState1"
        android:textSize="15sp"
        android:textColor="@color/standard9"
        android:paddingLeft="@dimen/twentyDp"
        android:paddingRight="@dimen/twentyDp"
        android:paddingTop="@dimen/fiveDp"
        android:paddingBottom="@dimen/fiveDp"
        android:visibility="gone"
        android:background="@drawable/report_target_bodily_bg"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
    <TextView
        android:id="@+id/valueStrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42.6kg"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/text_black"
        />
    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:text="轻度"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/tenDp"
        android:background="@drawable/report_target_state_bg"
        android:gravity="center"
        android:paddingTop="@dimen/twoDp"
        android:paddingBottom="@dimen/twoDp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noDataLayout"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reportNoData"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/text_black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="- -"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/text_gray"
            android:layout_marginLeft="@dimen/tenDp"
            android:background="@drawable/gray_stroke_2"
            android:gravity="center"
            android:paddingTop="@dimen/twoDp"
            android:paddingBottom="@dimen/twoDp"
            />

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/click_rectangle_selecter_default_wi"
    android:orientation="horizontal"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2.5"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/item_setting_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/fiftentDp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            >
            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_setting_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#505050"
                custom:customtTextSize="30"
                custom:customtTypeface="EX" />
            <ImageView
                android:id="@+id/item_setting_head_point"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/point"
                android:layout_marginLeft="6dp"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >
        <com.jq.code.view.text.CustomTextView
            android:id="@+id/item_setting_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_setting_right"
            custom:customtTypeface="LTEX"
            custom:customtTextSize="30"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="6dp"
            android:text="0.0KB"
            android:textColor="#505050"
            />

        <FrameLayout
        android:id="@+id/item_setting_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        >
        <com.jq.code.view.button.SwitchButton
            android:id="@+id/item_setting_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/item_setting_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow" />
    </FrameLayout>
    </RelativeLayout>
</LinearLayout>

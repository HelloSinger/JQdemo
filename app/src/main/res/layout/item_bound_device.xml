<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mWholeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_bound_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62px"
        android:text="蓝牙连接"
        android:textColor="@color/white"
        android:textSize="30px" />

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/backImager"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/fiftentDp"
            android:paddingRight="@dimen/fiftentDp"
            android:scaleType="centerInside"
            android:src="@mipmap/dl_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/HaierBluetooth_title"
            android:textColor="#505050"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mBlueToothDisable"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/titleLayout"
        android:background="#ff0000"
        android:gravity="center"
        android:text="@string/HaierBluetooth_open_bluetooth"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_bind_before"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="428px"
        android:visibility="visible">

        <TextView
            android:id="@+id/bound_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="260px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30px"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30px"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/bound_animation"
            android:layout_width="586px"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bounded_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="310px"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="488px"
            android:layout_height="488px"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_first_cirlce">

            <ImageView
                android:layout_width="411px"
                android:layout_height="411px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_circle_bg" />

            <ImageView
                android:layout_width="410px"
                android:layout_height="410px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_bind_circle_two" />

            <LinearLayout
                android:id="@+id/ll_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bound_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="80px" />

                <TextView
                    android:id="@+id/bound_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="xxxx"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="200px"
                android:layout_height="1px"
                android:layout_below="@id/ll_weight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:background="@color/white" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_weight"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:text="体 重"
                android:textColor="@color/white"
                android:textSize="30px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bound_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150px"
            android:text="已发现智能体脂秤,请确认秤显示的数值和上方一致,\n即可确认"
            android:textColor="@color/white"
            android:textSize="28px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_show_bind_induce"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bound_device_research"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_bind_bg1"
                android:gravity="center"
                android:text="重新搜索"
                android:textColor="@color/tv_00CF9B"
                android:textSize="24px" />

            <TextView
                android:id="@+id/bound_device_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180px"
                android:background="@drawable/tv_bind_bg2"
                android:gravity="center"
                android:text="确认绑定"
                android:textColor="@color/colorPrimary"
                android:textSize="24px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/un_bound_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消绑定"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16px"
            android:background="@mipmap/icon_cancle_bind" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.jq.code.view.wheel.WheelView
                android:id="@+id/time_select_wheel_view_hour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                custom:ShadowsColor="@android:color/white" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/height_text_view_feet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="62dp"
                android:text="@string/hour"
                android:textColor="@color/text_black"
                custom:customtTextSize="30"
                custom:customtTypeface="LTEX" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.jq.code.view.wheel.WheelView
                android:id="@+id/time_select_wheel_view_minute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                custom:ShadowsColor="@android:color/white" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/height_text_view_inch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="62dp"
                android:text="@string/minut"
                android:textColor="@color/text_black"
                custom:customtTextSize="30"
                custom:customtTypeface="LTEX" />
        </FrameLayout>
    </LinearLayout>

    <com.jq.code.view.text.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="bottom"
        android:paddingBottom="6dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/settingAlarmCycle"
        android:textColor="@color/black"
        custom:customtTextSize="28"
        custom:customtTypeface="LTEX" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:background="@android:color/white"
            android:orientation="vertical">

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_time_state_1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/justOne"
                android:drawablePadding="40dp"
                android:textColor="@color/text_black"
                custom:customtTextSize="34"
                custom:customtTypeface="EX" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_time_state_2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/everyDay"
                android:drawablePadding="40dp"
                android:textColor="@color/text_black"
                custom:customtTextSize="34"
                custom:customtTypeface="EX" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_time_state_3"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:drawablePadding="40dp"
                android:text="@string/monToFri"
                android:textColor="@color/text_black"
                custom:customtTextSize="34"
                custom:customtTypeface="EX" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"></View>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@android:color/white"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_weight="1.6"
		android:layout_height="0dp"
		android:orientation="horizontal"
		android:background="#3A3A3F"
		android:paddingTop="@dimen/headMaginTop"
		android:gravity="center_vertical"
		>
		<ImageView
			android:id="@+id/about_me_back"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:src="@mipmap/head_back"
			/>
		<com.jq.code.view.text.CustomTextView
			android:layout_width="0dp"
			android:layout_weight="3.8"
			android:layout_height="wrap_content"
			android:text="@string/menuAboutMe"
			custom:customtTextSize="38"
			android:gravity="center"
			android:textColor="@android:color/white"
			/>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1.2"
			android:layout_height="wrap_content"/>
	</LinearLayout>

   	<ListView
		android:id="@+id/about_me_listview"
		android:layout_width="match_parent"
		android:layout_weight="14"
		android:layout_height="0dp"
		android:divider="#F1F1F1"
		android:dividerHeight="1px"
		android:paddingRight="22dp"
		>
	</ListView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/item_commdity_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.6"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:paddingLeft="16dp">

        <com.jq.code.view.text.CustomTextView
            android:id="@+id/item_commdity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            app:customtTextSize="28" />

        <com.jq.code.view.text.CustomTextView
            android:id="@+id/item_commdity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_commdity_title"
            android:textColor="@color/text_gray"
            app:customtTextSize="24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            >
            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_commdity_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠劵"
                android:background="@drawable/red_stroke_box"
                android:textColor="@android:color/holo_red_light"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="1dp"
                app:customtTextSize="22" />
            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_commdity_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainColor"
                app:customtTextSize="32"
                android:paddingTop="4dp"
                app:customtTypeface="PROR" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/item_commdity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                app:customtTextSize="22" />
        </LinearLayout>
        <com.jq.code.view.text.CustomTextView
            android:id="@+id/item_commdity_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="淘宝购买"
            android:background="@drawable/red_corner_box"
            android:textColor="@android:color/white"
            android:paddingTop="3dp"
            android:paddingBottom="4dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            app:customtTextSize="30" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_report"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:layout_marginLeft="@dimen/px90"
            android:layout_marginTop="@dimen/px51"
            android:background="@mipmap/icon_bind_report" />

        <TextView
            android:id="@+id/tv_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px60"
            android:layout_toRightOf="@id/iv_report"
            android:text="体质报告"
            android:textColor="@color/white"
            android:textSize="@dimen/px24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px65"
            android:layout_toRightOf="@id/tv_report"
            android:text="场景使用8次"
            android:textColor="@color/white"
            android:textSize="@dimen/px18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_report"
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginTop="@dimen/px5"
            android:layout_toRightOf="@id/iv_report"
            android:text="海尔智能体脂秤—Q81"
            android:textColor="@color/white"
            android:textSize="@dimen/px18" />

        <TextView
            android:id="@+id/tv_unserstand_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px65"
            android:layout_marginRight="@dimen/px82"
            android:background="@drawable/tv_understand_scene_bg"
            android:drawableLeft="@mipmap/icon_un_bing"
            android:drawablePadding="@dimen/px26"
            android:paddingLeft="@dimen/px30"
            android:paddingTop="@dimen/px11"
            android:paddingBottom="@dimen/px11"
            android:text="解除绑定"
            android:textColor="@color/white" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_body_fat_scale"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/px60"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/px19"
            android:layout_height="@dimen/px28"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/icon_left_normal" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/px62"
            android:layout_height="@dimen/px62"
            android:layout_marginLeft="@dimen/px84"
            android:background="@mipmap/icon_back" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/px19"
            android:layout_height="@dimen/px28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px84"
            android:background="@mipmap/icon_right_select" />
    </LinearLayout>
</LinearLayout>
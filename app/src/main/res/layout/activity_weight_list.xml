<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backImager_hist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/fiftentDp"
            android:scaleType="centerInside"
            android:src="@mipmap/dl_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/weight_list_title"
            android:padding="10dp"
            android:textColor="#111"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/stl_weight"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <RelativeLayout
            android:id="@+id/history_titleclick1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/history_text1"
                android:text="健康"
                android:textColor="@color/standard1"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/history_lines1"
                android:background="@color/standard1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="90dp"
                android:layout_height="3dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/history_titleclick2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/history_text2"
                android:text="饮食"
                android:textColor="@color/text_color_black2"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/history_lines2"
                android:background="@color/standard1"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="90dp"
                android:layout_height="3dp" />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/history_lines3"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="0.6dp" />
    <FrameLayout
        android:id="@+id/mHistoryListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

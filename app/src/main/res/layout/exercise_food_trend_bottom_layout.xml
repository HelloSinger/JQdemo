<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/total_corner_2"
                android:paddingBottom="@dimen/twoDp"
                android:paddingRight="@dimen/fiveDp"
                android:paddingLeft="@dimen/fiveDp"
                android:paddingTop="@dimen/twoDp"
                android:text="@string/sportHighest"
                android:textColor="@color/white"
                android:textSize="13sp" />
            <com.jq.code.view.text.CustomTextView
                android:id="@+id/highestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="1400/900"
                android:textColor="@color/text_black"
                app:customtTextSize="40"
                app:customtTypeface="EX" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="@string/sportKilocalorie"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/average_corner_2"
                android:paddingBottom="@dimen/twoDp"
                android:paddingRight="@dimen/fiveDp"
                android:paddingLeft="@dimen/fiveDp"
                android:paddingTop="@dimen/twoDp"
                android:text="@string/sportAverage"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/averageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fiveDp"
                android:layout_weight="1"
                android:text="800/600"
                android:textColor="@color/text_black"
                app:customtTextSize="40"
                app:customtTypeface="EX"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="@string/sportKilocalorie"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lowest_corner_2"
                android:paddingBottom="@dimen/twoDp"
                android:paddingRight="@dimen/fiveDp"
                android:paddingLeft="@dimen/fiveDp"
                android:paddingTop="@dimen/twoDp"
                android:text="@string/sportLowest"
                android:textColor="@color/white"
                android:textSize="13sp" />
            <com.jq.code.view.text.CustomTextView
                android:id="@+id/lowestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="980/450"
                android:textColor="@color/text_black"
                app:customtTextSize="40"
                app:customtTypeface="EX"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="@string/sportKilocalorie"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tenDp"
        android:orientation="vertical"
        android:padding="@dimen/tenDp"
        android:background="@color/bloodglucose_gray"
        android:layout_marginLeft="@dimen/thirtyDp"
        android:layout_marginRight="@dimen/thirtyDp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总摄入/总消耗"
            android:textSize="15sp"
            android:textColor="@color/text_gray"
            />
        <com.jq.code.view.text.CustomTextView
            android:id="@+id/allValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5600/4500"
            android:textColor="@color/text_black"
            app:customtTextSize="50"
            app:customtTypeface="EX"
            />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_solid_stroke_box"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="测量异常提示"
            android:textColor="@color/black"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <ImageView
            android:id="@+id/abnomal_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="20dp"
            android:src="@mipmap/dialog_cancle_icon" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光脚"
            android:textColor="@color/mainColor"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="一定要光脚，穿着厚袜子和鞋可能会测不出来哟~"
            android:textColor="@color/black"
            custom:customtTextSize="32"
            custom:customtTypeface="LTEX" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保持脚底干净"
            android:textColor="@color/mainColor"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="请确保脚底干净，脚底沾有脏污或者过于潮湿都有可能无法成功测量"
            android:textColor="@color/black"
            custom:customtTextSize="32"
            custom:customtTypeface="LTEX" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="把秤放在平坦、坚硬的地面上"
            android:textColor="@color/mainColor"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="秤脚上的传感器要接触到坚硬的地面，才会给予更精确的测量反馈"
            android:textColor="@color/black"
            custom:customtTextSize="32"
            custom:customtTypeface="LTEX" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="均匀站在秤面上"
            android:textColor="@color/mainColor"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="以秤的中心为准，双脚平行分布在两侧"
            android:textColor="@color/black"
            custom:customtTextSize="32"
            custom:customtTypeface="LTEX" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正确的用户设置"
            android:textColor="@color/mainColor"
            custom:customtTextSize="34"
            custom:customtTypeface="LTEX" />

        <com.jq.code.view.text.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="请确保用户的性别，身高，年龄的设置在合理的范围内哟~"
            android:textColor="@color/black"
            custom:customtTextSize="32"
            custom:customtTypeface="LTEX" />

    </LinearLayout>

    <com.jq.code.view.text.CustomTextView
        android:id="@+id/delete_abnomal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/blue_solid_corner_box_4"
        android:gravity="center"
        android:padding="12dp"
        android:text="删除本次测量数据"
        android:textColor="@android:color/white"
        custom:customtTextSize="34" />
</LinearLayout>
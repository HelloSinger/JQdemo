<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bloodglucose_gray"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <cn.bingoogolapple.swipeitemlayout.BGASwipeItemLayout
        android:id="@+id/swipe_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_rectangle_selecter_default_wi_2"
        app:bga_sil_bottomMode="pullOut"
        app:bga_sil_swipeDirection="left">

        <ImageView
            android:id="@+id/item_swipe_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#Ed4242"
            android:scaleType="centerInside"
            android:src="@mipmap/delete" />

        <include layout="@layout/page_home_type_item"></include>
    </cn.bingoogolapple.swipeitemlayout.BGASwipeItemLayout>
</LinearLayout>
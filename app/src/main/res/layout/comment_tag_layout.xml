<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:layout_marginTop="@dimen/twentyDp"
              android:background="@color/bloodglucose_gray"
              android:gravity="center"
              android:orientation="horizontal">

	<View
		android:layout_width="0dp"
		android:layout_height="1px"
		android:layout_weight="1"
		android:background="@color/gray"/>

	<com.jq.code.view.text.CustomTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/twoDp"
		android:paddingLeft="@dimen/tenDp"
		android:paddingRight="@dimen/tenDp"
		android:paddingTop="@dimen/twoDp"
		android:text="@string/leavingMessage"
		android:textColor="@color/text_black"
		app:customtTextSize="36"
		app:customtTypeface="LTEX"/>

	<View
		android:layout_width="0dp"
		android:layout_height="1px"
		android:layout_weight="1"
		android:background="@color/gray"/>
</LinearLayout>

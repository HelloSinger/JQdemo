<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <View
        android:id="@+id/height_cancleView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4" />

    <LinearLayout
        android:id="@+id/anti_theft_t9_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:divider="@android:color/darker_gray"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.jq.code.view.text.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/editBglucose"
                app:customtTypeface="LTEX"
                app:customtTextSize="32"
                android:textColor="@color/text_gray" />
            <ImageView
                android:id="@+id/button_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/click_rectangle_selecter_default_tr"
                android:src="@mipmap/dialog_cancle_icon" />

            <ImageView
                android:id="@+id/button_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|bottom"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/click_rectangle_selecter_default_tr"
                android:src="@mipmap/weight_stat_check" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/oneText"
                style="@style/anti_theft_t9_key"
                android:text="1" />

            <TextView
                android:id="@+id/twoText"
                style="@style/anti_theft_t9_key"
                android:text="2" />

            <TextView
                android:id="@+id/threeText"
                style="@style/anti_theft_t9_key"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fourText"
                style="@style/anti_theft_t9_key"
                android:text="4" />

            <TextView
                android:id="@+id/fiveText"
                style="@style/anti_theft_t9_key"
                android:text="5" />

            <TextView
                android:id="@+id/sixText"
                style="@style/anti_theft_t9_key"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sevenText"
                style="@style/anti_theft_t9_key"
                android:text="7" />

            <TextView
                android:id="@+id/eightText"
                style="@style/anti_theft_t9_key"
                android:text="8" />

            <TextView
                android:id="@+id/nineText"
                style="@style/anti_theft_t9_key"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pointText"
                style="@style/anti_theft_t9_key"
                android:text="." />

            <TextView
                android:id="@+id/zeroText"
                style="@style/anti_theft_t9_key"
                android:text="0" />

            <ImageView
                android:id="@+id/deleteImage"
                style="@style/anti_theft_t9_key"
                android:scaleType="center"
                android:src="@mipmap/bglucode_delete_icon" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
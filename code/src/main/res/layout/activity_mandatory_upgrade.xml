<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/white_corner_box"
        android:orientation="vertical">

        <com.jq.code.view.text.CustomTextView
            android:id="@+id/upgrade_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="26dp"
            android:textColor="@color/black"
            custom:customtTextSize="32" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/upgrade_mandatory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bottom_corner_box_10"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/upgrade"
                android:textColor="@android:color/white"
                custom:customtTextSize="40" />
            <LinearLayout
                android:id="@+id/upgrade_usually"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/upgrade_cancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bottom_left_corner_box"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/cancel"
                    android:textColor="@android:color/white"
                    custom:customtTextSize="40" />

                <com.jq.code.view.text.CustomTextView
                    android:id="@+id/upgrade_sure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bottom_right_corner_box"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/sure"
                    android:textColor="@android:color/white"
                    custom:customtTextSize="40" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>

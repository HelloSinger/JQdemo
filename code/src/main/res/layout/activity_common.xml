<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/click_rectangle_selecter_default_tr"
            android:paddingLeft="@dimen/fiftentDp"
            android:paddingRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/head_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/twoDp">

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/common_middle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3c3c3c"
                app:customtTextSize="30" />

            <ImageView
                android:id="@+id/loadImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <com.jq.code.view.text.CustomTextView
                android:id="@+id/common_right_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/click_rectangle_selecter_default_tr"
                android:gravity="center"
                android:paddingLeft="@dimen/fiftentDp"
                android:paddingRight="@dimen/fiftentDp"
                android:textColor="#3c3c3c"
                android:visibility="gone"
                app:customtTextSize="30"
                app:customtTypeface="LTEX" />

            <ImageView
                android:id="@+id/rightIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/click_rectangle_selecter_default_tr"
                android:paddingLeft="@dimen/fiftentDp"
                android:paddingRight="@dimen/fiftentDp"
                android:src="@mipmap/flag_share_white"
                android:visibility="invisible" />
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/contentLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10.1"
        android:orientation="vertical">


    </LinearLayout>
</LinearLayout>